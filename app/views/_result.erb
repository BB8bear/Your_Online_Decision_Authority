<div class="review-header">
    <div class="media-title arrange_unit arrange_unit--fill">
        <a class="biz-name" href="<%= url %>" target="_blank">
            <span><%= recommendation %></span>
        </a>

        <div class="biz-rating biz-rating-large clearfix">   
            <div class="i-stars i-stars--large-<%= stars %> rating-large" title="<%= rating %>star rating">
                <img class="offscreen" height="303" src="https://s3-media1.fl.yelpcdn.com/assets/srv0/yelp_design_web/41341496d9db/assets/img/stars/stars.png" width="84" 
                <% if rating == 0 %>
                    alt="(no rating)">
                <% else %>
                    alt="<%= rating %> star rating">
                <% end %>
                <img class="offscreen" height="303" src="https://s3-media1.fl.yelpcdn.com/assets/srv0/yelp_design_web/41341496d9db/assets/img/stars/stars.png" width="84" alt="(no rating)">
            </div>

            <span class="review-count rating-qualifier">
                <%= review_count %> reviews
            </span>
        </div>
    </div>

    <div class="arrange_unit">
        <a href="/" target="_blank">
            <img src="https://s3-media1.fl.yelpcdn.com/assets/srv0/yelp_styleguide/44d33ce5537c/assets/img/logos/logo_desktop_medium.png" srcset="https://s3-media4.fl.yelpcdn.com/assets/srv0/yelp_styleguide/7399f573a724/assets/img/logos/logo_desktop_medium@2x.png 2x" width="82">
        </a>
    </div>
</div>